pipeline {
    agent any    
  tools {
    gradle "Gradle-6"
  }
  stages {
    stage('Clone Repository') {
      steps {
        git url: 'https://github.com/kefahwambai/gallery'
      }
    }
    stage('Initialize Gradle Build') {
      steps {
        sh 'gradle init'
      }
    }
    stage('Build the Project') {
      steps {
        sh 'gradle build'
      }
    stage('Deploy to Vercel') {
      steps {
        withCredentials([string(credentialsId: 'Vercel', variable: 'VERCEL_TOKEN')]) {
          sh 'vercel --prod --token $VERCEL_TOKEN'
        }
      }
    }
  }
  post {
    success {
      script {
        def slackToken = credentials('FEvW4LZaXDmqxvnzXPCGKbr7')
        
        slackSend(
          color: '#36a64f',
          message: "Pipeline deployed successfully!",
          channel: '#firstnameip',
          tokenCredentialId: slackToken
        )
      }
    }  
}
